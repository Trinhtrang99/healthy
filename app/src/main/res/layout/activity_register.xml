<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="20dp"
            tools:context=".account.ActivityLogin">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/txtWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgLogo"
                android:fontFamily="@font/allerta"
                android:text="Xin chào !!"
                android:textColor="@color/txt_color"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtWelcome"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/allerta"
                android:text="Đăng kí tài khoản để đăng nhập !"
                android:textColor="@color/txt_color" />

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/allerta"
                android:text="Tên"
                android:textColor="@color/txt_color"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtName"
                android:layout_centerInParent="true"
                android:backgroundTint="@color/txt_color"
                android:fontFamily="@font/allerta"
                android:textColor="@color/txt_color" />

            <TextView
                android:id="@+id/txtMail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/edtName"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/allerta"
                android:text="Email"
                android:textColor="@color/txt_color"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtMail"
                android:backgroundTint="@color/txt_color"
                android:fontFamily="@font/allerta"
                android:textColor="@color/txt_color" />

            <TextView
                android:id="@+id/txtPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/edtEmail"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/allerta"
                android:text="Mật khẩu"
                android:textColor="@color/txt_color"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtPass"
                android:layout_centerInParent="true"
                android:backgroundTint="@color/txt_color"
                android:fontFamily="@font/allerta"
                android:textColor="@color/txt_color" />

            <TextView
                android:id="@+id/txtForgot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtPass"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/allerta"
                android:paddingVertical="10dp"
                android:text="Forgot Password?"
                android:textColor="@color/txt_color"
                android:visibility="invisible" />

            <Button
                android:id="@+id/btnCreate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtForgot"
                android:layout_marginTop="20dp"
                android:background="@drawable/border_btn"
                android:fontFamily="@font/allerta"
                android:text="Tạo tài khoản"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <LinearLayout
                android:id="@+id/layotLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtWelcome"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/allerta"
                    android:text="Bạn đã có tài khoản ? "
                    android:textColor="@color/txt_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtWelcome"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/allerta"
                    android:text=" Đăng nhập"
                    android:textColor="@color/main_color" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</layout>
